.container
  .temp
    %h1
      = @pres.current_temperature.to_i
      %span> &deg;
      %small= @pres.formatted_time(@pres.last_reading)

  %canvas#canvas

:javascript
  Chart.defaults.global.scaleFontFamily = "'Gotham SSm A', 'Gotham SSm B', 'sans-serif'";
  Chart.defaults.global.tooltipFontFamily = "'Gotham SSm A', 'Gotham SSm B', 'sans-serif'";
  Chart.defaults.global.tooltipFillColor = "rgba(220,220,220,0.85)",
  Chart.defaults.global.tooltipFontColor = "rgba(100,100,100,0.85)",
  Chart.defaults.global.scaleLineColor = "rgba(220,220,220,1)";
  $(document).ready(function(){
    var data = {
      labels: #{@pres.graph_temperatures.map { |temp| @pres.formatted_time(temp) } },
      datasets: [
        {
          fillColor : "rgba(220,220,220,0.5)",
          strokeColor : "rgba(220,220,220,1)",
          pointColor : "rgba(220,220,220,1)",
          pointStrokeColor : "#fff",
          data: #{@pres.graph_temperatures.reverse.collect(&:temperature)}
        }
      ]
    }
    myNewChart = new Chart($("#canvas").get(0).getContext("2d")).Line(data)
  });

